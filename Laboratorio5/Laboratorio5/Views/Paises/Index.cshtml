@model List<Laboratorio5.Models.PaisModel>;

@{
    ViewData["Title"] = "Paises";
}

<h1>@ViewBag.MainTitle </h1>

<div>
    <a href="@Url.Action("CrearPais","Paises")" class="btn btn-success"> Crear Pais</a>
    <table class="table">
        <thread>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Idioma</th>
                <th>Continente</th>
                 <th>Editar</th>
                 <th>Borrar</th>
            </tr>
        </thread>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Idioma</td>
                    <td>@item.Continente</td>
                    <td>@Html.ActionLink("Editar", "EditarPais", new {identificator = @item.Id},
                    new {@class= "btn btn alert-info", @onclick = "return confirm ('¿Quiere editar este pais?');"})</td>
                    <td>@Html.ActionLink("Borrar", "BorrarPais", new {identificator = @item.Id},
                    new {@class= "btn btn alert-danger", @onclick = "return confirm ('¿Quiere borrar este pais?');"})</td>
                </tr>
            }
        </tbody>
    </table>
</div>
